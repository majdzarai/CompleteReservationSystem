{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">{{ block('title') }}</div>
                    <div class="card-body">
                        {{ form_start(resetForm, {'attr': {'class': 'form'}}) }}
                            <div class="form-group">
                                {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'New Password'}}) }}
                                {% if resetForm.plainPassword.vars.errors|length > 0 %}
                                    <span class="text-danger">{{ resetForm.plainPassword.vars.errors|first }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Reset Password</button>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
