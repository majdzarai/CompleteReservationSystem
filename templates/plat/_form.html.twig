        {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prix du plat'}}) }}
         {{ form_errors(form.prix, { 'attr': { 'class': 'text-danger error-message' } }) }}
    </div>
</div>

<div class="form-group row">
    {{ form_label(form.restaurant, 'Restaurant', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.restaurant, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.restaurant, { 'attr': { 'class': 'text-danger error-message' } }) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
        <button type="submit" class="btn">{{ button_label|default('Enregister') }}</button>
    </div>
</div>

