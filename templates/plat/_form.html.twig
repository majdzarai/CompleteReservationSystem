        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du plat'}}) }}
         {{ form_errors(form.nom, { 'attr': { 'class': 'text-danger error-message' } }) }}
    </div>
</div>

<div class="form-group row">
    {{ form_label(form.image, 'Image du plat', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}, 'help': 'Téléchargez une image pour le plat (format: jpg, jpeg, png)'}) }}
    </div>
