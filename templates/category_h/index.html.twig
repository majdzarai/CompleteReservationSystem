{% extends 'back/t_base_hebergement.html.twig' %}

{% block title %}Category Index{% endblock %}

{% block body %}
<div style="padding-left: 25%;">
<div style="padding-top: 13%;">
    <div class="container mt-4">
        <h1>Category Index</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.nom }}</td>
                    <td>
                        {% if category.image %}
                            <img src="{{ asset('uploads/' ~ category.image) }}" alt="{{ category.nom }}" style="max-width: 100px;">
                        {% else %}
                            No image
                        {% endif %}
                    </td>
                    <td>{{ category.description }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_category_new') }}" class="btn btn-success">Create New</a>
    </div>
    
{% endblock %}