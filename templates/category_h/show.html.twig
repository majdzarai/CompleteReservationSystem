{% extends 'back/t_base_hebergement.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div style="padding-left: 25%;">
<div style="padding-top: 13%;">

<div class="container mt-4">
    <h1>Category</h1>

    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ category.nom }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            {% if category.image %}
                                <img src="{{ asset('uploads/' ~ category.image) }}" alt="{{ category.nom }}" style="max-width: 200px;">
                            {% else %}
                                No image
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ category.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('app_category_index') }}" class="btn btn-primary">Back to List</a>
    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-success">Edit</a>
    {{ include('category/_delete_form.html.twig') }}
</div>
{% endblock %}
