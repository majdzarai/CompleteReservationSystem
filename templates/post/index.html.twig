{% extends 'back/t_base_restaurant.html.twig' %}



{% block body %}
<div style="padding-left: 25%;">
<div style="padding-top: 13%;">

<div class="container mt-4">
    <h1>List Des Publication</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Description</th>
                <th scope="col">Rate</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>
                        {% if post.image %}
                           <img src="{{ asset('uploads/' ~ post.image) }}" alt="{{ post.rate }}" class="img-thumbnail" style="max-height: 100px;">
                        {% else %}
                            No Image
                        {% endif %}
                    </td>
                    <td>{{ post.description }}</td>
                    <td>{{ post.rate }}</td>
                    <td>
                        <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}" class="btn btn-success">Ajouter publication</a>
</div>
{% endblock %}